<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
         width="100%" height="30">
    <s:Rect width="{width/100*progress}" height="100%">
        <s:fill>
            <s:SolidColor color="{barColor}" alpha="0.6"/>
        </s:fill>
    </s:Rect>
    <s:Label text="{label}" verticalCenter="0" horizontalCenter="0"/>
    <s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="right" paddingRight="4">
        <s:Label text="{progress}%" visible="{progress>0}"/>
    </s:HGroup>

    <fx:Script><![CDATA[
        [Bindable]
        public var label:String;

        [Bindable]
        public var barColor:uint = 0x097fc8;

        [Bindable]
        public var progress:Number = 0;
        ]]></fx:Script>
</s:Group>
